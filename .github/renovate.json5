{
  "extends": [
    "config:base",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigest"
  ],
  "platform": "github",
  "username": "terminator-bot[bot]",
  "gitAuthor": "terminator-bot[bot] <184962450+terminator-bot@users.noreply.github.com>",
  "repositories": ["samipsolutions/containers"],
  "onboarding": false,
  "requireConfig": "optional",
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "suppressNotifications": ["prIgnoreNotification"],
  "commitBodyTable": true,
  "customManagers": [
    {
      "customType": "regex",
      "description": "Match Makefile-style VERSION variables",
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}",
      "fileMatch": [
        "Makefile"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?)(?:\\s+extractVersion=(?<extractVersion>.+?))?\\s+depName=(?<depName>.+?)\\s.*_VERSION\\s+\\?=\\s+(?<currentValue>.+)"
      ]
    },
    {
      "customType": "regex",
      "description": "Match Dockerfile ENV variables ending in _VER",
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}",
      "fileMatch": [
        "(^|/|\\.)Dockerfile$",
        "(^|/)Dockerfile\\.[^/]*$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?)(?:\\s+extractVersion=(?<extractVersion>.+?))?\\s+depName=(?<depName>.+?)\\s+ENV\\s+\\w+_VER=\"(?<currentValue>.+)\""
      ]
    }
  ],
  "packageRules": [
    {
      "description": "Auto-merge Github Actions",
      "matchDatasources": ["github-tags"],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "description": "Perl ignore",
      "matchDatasources": ["github-tags"],
      "automerge": false,
      "automergeType": "branch",
      "ignoreTests": true,
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["perl"]
    },
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["digest"],
      "commitMessagePrefix": "ðŸ“£ "
    }
  ]
}
